<% if @notices.present? %>
<div class="index notices">
  <div class="list-head"><%= t "sys.notice" %></div>
  <ul class="list-items">
    <% @notices.each do |item| %>
    <li class="list-item">
      <div class="info">
        <%= link_to item.name, sys_public_notice_path(id: item), class: "title notice-severity-#{item.notice_severity}" %>
        <span class="datetime"><%= item.released.strftime("%Y/%m/%d %H:%M") %></span>
      </div>
    </li>
    <% end %>
  </ul>
  <% if @notices.next_page %>
  <div class="notices-more"><%= link_to I18n.t("views.links.more"), sys_public_notices_path %></div>
  <% end %>
</div>
<% end %>

<% if @cms_sites.size > 0 %>
<div class="mypage-box">
  <div class="index mypage-sites">
    <div class="list-head"><%= t "cms.site" %></div>

    <ul class="list-items">
      <% @cms_sites.each do |item| %>
      <li class="list-item">
        <div class="info">
          <%= link_to item.name, cms_contents_path(site: item), class: "title" %>

          <div class="meta">
            <span class="id"><%= item.full_url %></span>
          </div>
        </div>
      </li>
      <% end %>
    </ul>
  </div>
</div>
<% end %>

<% if @gws_sites.size > 0 && SS.config.gws.disable.blank? %>
<div class="mypage-box">
  <div class="index mypage-groups">
    <div class="list-head"><%= t "gws.group" %></div>

    <ul class="list-items">
      <% @gws_sites.each do |item| %>
      <li class="list-item">
        <div class="info">
          <%= link_to item.name, gws_portal_path(site: item), class: "title" %>
        </div>
      </li>
      <% end %>
    </ul>
  </div>
</div>
<% end %>
